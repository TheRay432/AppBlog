<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.PostDetailActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:id="@+id/post_detail_postImg">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_detail_title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="8sp"
        android:textSize="25sp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:layout_marginTop="8sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_detail_time"

            android:layout_marginLeft="8sp"
            android:layout_marginTop="8sp">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8sp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:id="@+id/post_detail_auth"
                android:layout_gravity="center">

            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/post_detail_userName"
            android:layout_marginTop="8sp"
            android:layout_marginLeft="5sp">

        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="8sp"
        android:textColor="@color/black"
        android:layout_marginLeft="8sp"
        android:id="@+id/post_detail_description"
        android:textSize="18sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8sp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20sp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/post_detail_user"
                android:scaleType="centerCrop"
                android:layout_gravity="center">

            </ImageView>
        </androidx.cardview.widget.CardView>
        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15sp"
            android:inputType="textPersonName"
            android:background="@drawable/reg_editext_sytle"
            android:id="@+id/post_detail_talk"
            android:hint="留言...">

        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reg_btn_style"
            android:text="留言"
            android:id="@+id/post_detail_btn"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_marginLeft="8sp">

        </Button>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/post_detail_recy">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>

</androidx.core.widget.NestedScrollView>